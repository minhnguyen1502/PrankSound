<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.TrendingFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/shadow_fart"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/btn_fart"
                app:layout_constraintEnd_toEndOf="@id/btn_fart"
                app:layout_constraintTop_toTopOf="@id/btn_fart"
                app:layout_constraintBottom_toBottomOf="@id/btn_fart"
                android:background="@drawable/bg_shadow"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="-2dp"
                android:layout_marginEnd="-1dp"/>
            <View
                android:id="@+id/shadow_toilet"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/btn_toilet"
                app:layout_constraintEnd_toEndOf="@id/btn_toilet"
                app:layout_constraintTop_toTopOf="@id/btn_toilet"
                app:layout_constraintBottom_toBottomOf="@id/btn_toilet"
                android:background="@drawable/bg_shadow"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="-2dp"
                android:layout_marginEnd="-1dp"/>
            <View
                android:id="@+id/shadow_sheep"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/btn_sheep"
                app:layout_constraintEnd_toEndOf="@id/btn_sheep"
                app:layout_constraintTop_toTopOf="@id/btn_sheep"
                app:layout_constraintBottom_toBottomOf="@id/btn_sheep"
                android:background="@drawable/bg_shadow"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="-2dp"
                android:layout_marginEnd="-1dp"/>
            <View
                android:id="@+id/shadow_laughing"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/btn_laughing"
                app:layout_constraintEnd_toEndOf="@id/btn_laughing"
                app:layout_constraintTop_toTopOf="@id/btn_laughing"
                app:layout_constraintBottom_toBottomOf="@id/btn_laughing"
                android:background="@drawable/bg_shadow"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="-2dp"
                android:layout_marginEnd="-1dp"/>
            <View
                android:id="@+id/shadow_hair"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/btn_hair"
                app:layout_constraintEnd_toEndOf="@id/btn_hair"
                app:layout_constraintTop_toTopOf="@id/btn_hair"
                app:layout_constraintBottom_toBottomOf="@id/btn_hair"
                android:background="@drawable/bg_shadow"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="-2dp"
                android:layout_marginEnd="-1dp"/>
            <View
                android:id="@+id/shadow_clapping"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/btn_clapping"
                app:layout_constraintEnd_toEndOf="@id/btn_clapping"
                app:layout_constraintTop_toTopOf="@id/btn_clapping"
                app:layout_constraintBottom_toBottomOf="@id/btn_clapping"
                android:background="@drawable/bg_shadow"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="-2dp"
